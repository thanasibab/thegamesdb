<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.UserRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Games</servlet-name>
        <servlet-class>controller.GameListDisplay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Games</servlet-name>
        <url-pattern>/games</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>controller.GameSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditGame</servlet-name>
        <servlet-class>controller.GameEdit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditGame</servlet-name>
        <url-pattern>/editGame</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Favorites</servlet-name>
        <servlet-class>controller.UserFavorite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Favorites</servlet-name>
        <url-pattern>/favorites</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserReset</servlet-name>
        <servlet-class>controller.UserReset</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserReset</servlet-name>
        <url-pattern>/forgotPass</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminHistoryLogin</servlet-name>
        <servlet-class>controller.AdminHistoryLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHistoryLogin</servlet-name>
        <url-pattern>/loginHistory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminHistoryPurchase</servlet-name>
        <servlet-class>controller.AdminHistoryPurchase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHistoryPurchase</servlet-name>
        <url-pattern>/purchaseHistory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>controller.CartCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserEdit</servlet-name>
        <servlet-class>controller.UserEdit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserEdit</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>controller.CartCheckout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

    <display-name>Archetype Created Web Application</display-name>

</web-app>
